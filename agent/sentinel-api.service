[Unit]
Description=Sentinel API Service
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=notify
User=sentinel
Group=sentinel
WorkingDirectory=/home/sentinel/agent/agent
Environment="PATH=/home/sentinel/venv/bin"
EnvironmentFile=/home/sentinel/agent/agent/.env
ExecStart=/home/sentinel/venv/bin/gunicorn main:app \
    --workers 4 \
    --worker-class uvicorn.workers.UvicornWorker \
    --bind 0.0.0.0:8000 \
    --access-logfile /home/sentinel/agent/agent/logs/access.log \
    --error-logfile /home/sentinel/agent/agent/logs/error.log \
    --log-level info

Restart=always
RestartSec=10
NoNewPrivileges=true
PrivateTmp=true
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
